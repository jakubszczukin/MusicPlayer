<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.MusicPlayer" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/blue_800</item> <!-- Most frequently displayed across app's screens and components -->
        <item name="colorPrimaryVariant">@color/blue_900</item> <!-- Variation of the primary color -->
        <item name="colorOnPrimary">@color/white</item> <!-- Color that text/icons drawn on top of the primary color should have -->
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/orange_900</item> <!-- Color to complement the primary branding color -->
        <item name="colorSecondaryVariant">@color/orange_700</item> <!-- Variation of the secondary color -->
        <item name="colorOnSecondary">@color/black</item> <!-- Color that text/icons drawn on top of the secondary color should have -->
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
        <!--<item name="android:colorBackground">@color/white</item>  Background color -->
        <item name="android:colorBackground">@color/white</item>
        <item name="colorOnBackground">@color/black</item> <!-- Color that text/icons drawn on top of the background color should have -->
        <item name="colorAccent">@color/orange_700</item> <!-- Color to call attention to key elements ? -->
        <item name="colorOnSurface">@color/orange_700</item>
    </style>
</resources>